# RedDevil Analytics Backend - Environment Configuration Template
# Copy this file to .env and update with your actual values

# ==========================================
# Server Configuration
# ==========================================
SERVER_PORT=8080

# ==========================================
# Database Configuration
# ==========================================
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/reddevil_analytics
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=your_password_here

# Database Pool Settings (optional)
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=10
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=5

# ==========================================
# Redis Configuration
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TIMEOUT=60000

# ==========================================
# External API Providers
# ==========================================

# API-Football (https://www.api-football.com/)
# Get your key from: https://rapidapi.com/api-sports/api/api-football
API_FOOTBALL_KEY=your_api_football_key_here
API_FOOTBALL_ENABLED=true
API_FOOTBALL_DAILY_QUOTA=100

# Football-Data.org (https://www.football-data.org/)
# Get your key from: https://www.football-data.org/client/register
FOOTBALL_DATA_KEY=your_football_data_key_here
FOOTBALL_DATA_ENABLED=true

# TheSportsDB (https://www.thesportsdb.com/)
# Free tier key is '3', premium keys available at https://www.thesportsdb.com/api.php
THESPORTSDB_KEY=3
THESPORTSDB_ENABLED=true

# ==========================================
# AI Service Configuration
# ==========================================
AI_SERVICE_URL=http://localhost:8001
AI_SERVICE_ENABLED=false

# ==========================================
# Security Configuration
# ==========================================
ADMIN_API_KEY=admin-secret-key-change-this-in-production

# ==========================================
# CORS Configuration
# ==========================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:4200

# ==========================================
# Logging Configuration
# ==========================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_REDDEVIL=DEBUG

# ==========================================
# Spring Profiles
# ==========================================
# Options: dev, test, prod
SPRING_PROFILES_ACTIVE=dev

# ==========================================
# Flyway Configuration
# ==========================================
SPRING_FLYWAY_ENABLED=true
SPRING_FLYWAY_BASELINE_ON_MIGRATE=true

# ==========================================
# Actuator Configuration
# ==========================================
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus

# ==========================================
# Application Specific Settings
# ==========================================

# Target Team Configuration
APP_TEAMS_TARGET_TEAM_ID=33
APP_TEAMS_TARGET_TEAM_NAME=Manchester United

# Competition IDs
APP_COMPETITIONS_PREMIER_LEAGUE_ID=2021
APP_COMPETITIONS_EUROPA_LEAGUE_ID=2146
APP_COMPETITIONS_FA_CUP_ID=2055

# Scheduling (Cron expressions)
APP_SCHEDULING_FIXTURES_SYNC_CRON=0 0 2 * * ?
APP_SCHEDULING_STANDINGS_SYNC_CRON=0 */30 * * * ?
APP_SCHEDULING_LIVE_POLL_INTERVAL=30000
APP_SCHEDULING_ASSETS_REFRESH_CRON=0 0 3 * * SUN

# Cache TTL (milliseconds)
APP_CACHE_TTL_STANDINGS=1800000
APP_CACHE_TTL_FIXTURES=3600000
APP_CACHE_TTL_LIVE_SNAPSHOT=30000
APP_CACHE_TTL_TEAM_ASSETS=604800000
APP_CACHE_TTL_PLAYER_ASSETS=604800000
APP_CACHE_TTL_NEXT_MATCH=300000
